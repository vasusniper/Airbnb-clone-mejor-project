<%layout('/layouts/template') %>
<body>
  <!-- Filters Section -->
  <div class="filters">
    <form action="/listing">
    <div class="filter">
      <i class="fa-solid fa-clock"></i>
     <p>Trending</p>
    </div>
  </form>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>castle</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water-ladder"></i>
      <p>Pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree-city"></i>
      <p>Treehouse</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-hotel"></i>
      <p>Luxury Stay</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-dungeon"></i>
      <p>Cave</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-sun"></i>
      <p>Desert</p>
    </div>
    <div class="text-switch">
      <div class="form-check form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault"><b>Desplay total after taxes</b></label>
      </div>
    </div>
  </div>

  <!-- Listings Section -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
   <% for(list of listings){%>
    <a href="/listings/<%=list._id%>" class="listing-link">
      <div class="card listing-card">
        <img src="<%=list.image.url%>" class="card-img-top" alt="listings image">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%=list.title %></h5>
          <p>&#8377;<%=list.price.toLocaleString("en-IN")%>/night <i class="tax-info">&nbsp; +18 GST</i></p>
        </div>
      </div>
    </a>
   <%}%>
  </div>
</body>

<script>
  // Reference the switch element
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");

  // Add event listener for click
  taxSwitch.addEventListener("click", () => {
    // Get all elements with class "tax-info"
    let taxInfo = document.getElementsByClassName("tax-info");

    // Loop through all tax-info elements
    for (info of taxInfo) {
      // Toggle the display property
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>